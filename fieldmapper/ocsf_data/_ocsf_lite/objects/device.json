{
  "caption": "Device",
  "description": "Simplified device object for OCSF Lite.",
  "extends": "object",
  "name": "device",
  "attributes": {
    "created_time": {
      "description": "The time when the device was known to have been created.",
      "requirement": "optional",
      "type": "timestamp_t"
    },
    "desc": {
      "caption": "Description",
      "description": "The description of the device.",
      "requirement": "optional",
      "type": "string_t"
    },
    "domain": {
      "description": "The network domain where the device resides.",
      "requirement": "optional",
      "type": "string_t"
    },
    "groups": {
      "description": "The groups to which the device belongs.",
      "requirement": "optional",
      "is_array": true
    },
    "hostname": {
      "description": "The device hostname.",
      "requirement": "recommended",
      "type": "string_t"
    },
    "ip": {
      "description": "The device IP address.",
      "requirement": "optional",
      "type": "string_t"
    },
    "is_compliant": {
      "requirement": "optional",
      "type": "boolean_t"
    },
    "is_managed": {
      "requirement": "optional",
      "type": "boolean_t"
    },
    "is_personal": {
      "requirement": "optional",
      "type": "boolean_t"
    },
    "is_trusted": {
      "requirement": "optional",
      "type": "boolean_t"
    },
    "name": {
      "description": "The device name.",
      "requirement": "optional",
      "type": "string_t"
    },
    "region": {
      "description": "The region where the device is located.",
      "requirement": "optional",
      "type": "string_t"
    },
    "risk_level": {
      "requirement": "optional",
      "type": "string_t"
    },
    "risk_level_id": {
      "requirement": "optional",
      "type": "integer_t"
    },
    "risk_score": {
      "requirement": "optional",
      "type": "integer_t"
    },
    "subnet": {
      "requirement": "optional",
      "type": "string_t"
    },
    "type": {
      "description": "The device type.",
      "requirement": "optional",
      "type": "string_t"
    },
    "type_id": {
      "requirement": "optional",
      "type": "integer_t"
    },
    "uid": {
      "description": "The unique identifier of the device.",
      "requirement": "optional",
      "type": "string_t"
    }
  }
}
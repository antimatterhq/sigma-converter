  "name": "cloud",
  "attributes": {
    "account": {
      "requirement": "optional"
    },
    "cloud_partition": {
      "requirement": "optional",
      "type": "string_t"
    },
    "project_uid": {
      "requirement": "optional",
      "type": "string_t"
    },
    "provider": {
      "description": "The unique name of the Cloud services provider.",
      "requirement": "required",
      "type": "string_t"
    },
    "region": {
      "description": "The name of the cloud region.",
      "requirement": "recommended",
      "type": "string_t"
    },
    "zone": {
      "description": "The availability zone in the cloud region.",
      "requirement": "optional",
      "type": "string_t"
    }
  }

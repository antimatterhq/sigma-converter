{
  "caption": "Network Connection Information",
  "description": "Simplified Network Connection Information object for OCSF Lite.",
  "extends": "object",
  "name": "network_connection_info",
  "attributes": {
    "direction": {
      "description": "The direction of the network connection.",
      "requirement": "optional",
      "type": "string_t"
    },
    "direction_id": {
      "description": "The direction identifier of the network connection.",
      "requirement": "required",
      "type": "integer_t"
    },
    "flag_history": {
      "description": "The network connection flag history.",
      "requirement": "optional",
      "type": "string_t"
    },
    "protocol_name": {
      "description": "The IP protocol name in lowercase.",
      "requirement": "recommended",
      "type": "string_t"
    },
    "protocol_num": {
      "description": "The IP protocol number.",
      "requirement": "optional",
      "type": "integer_t"
    },
    "protocol_ver": {
      "description": "The IP protocol version.",
      "requirement": "optional",
      "type": "string_t"
    },
    "protocol_ver_id": {
      "description": "The IP protocol version identifier.",
      "requirement": "optional",
      "type": "integer_t"
    },
    "uid": {
      "description": "The unique identifier of the connection.",
      "requirement": "optional",
      "type": "string_t"
    }
  }
}
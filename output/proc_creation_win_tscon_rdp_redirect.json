{
  "metadata": {
    "name": "Suspicious RDP Redirect Using TSCON",
    "comment": "Detects a suspicious RDP session redirect using tscon.exe",
    "annotations": {
      "source": "sigma",
      "category": "process_creation",
      "product": "windows",
      "sigma_status": "test"
    }
  },
  "spec": {
    "schedule": {
      "atLeastEvery": "12h",
      "enabled": false
    },
    "input": {
      "batch": {
        "sql": "SELECT * FROM process_activity WHERE time BETWEEN CURRENT_TIMESTAMP() - INTERVAL 24 HOUR AND CURRENT_TIMESTAMP() AND (activity_id = 1 AND contains(lower(process.cmd_line), lower(' /dest:rdp-tcp#')))"
      }
    },
    "output": {
      "summary": "Detects a suspicious RDP session redirect using tscon.exe",
      "defaultContext": true
    },
    "metadata": {
      "version": 1.0,
      "severity": "High",
      "fidelity": "Investigative",
      "objective": "False positive: Unknown References: http://www.korznikov.com/2017/03/0-day-or-feature-privilege-escalation.html, https://medium.com/@networksecurity/rdp-hijacking-how-to-hijack-rds-and-remoteapp-sessions-transparently-to-move-through-an-da2a1e73a5f6, https://www.hackingarticles.in/rdp-session-hijacking-with-tscon/",
      "mitre": [
        {
          "taxonomy": "MITRE ATT&CK",
          "tactic": "Lateral-Movement",
          "techniqueId": "T1563",
          "subTechniqueId": "002"
        },
        {
          "taxonomy": "MITRE ATT&CK",
          "tactic": "Lateral-Movement",
          "techniqueId": "T1021",
          "subTechniqueId": "001"
        }
      ]
    },
    "computeMode": "high"
  },
  "apiVersion": "v1",
  "kind": "Rule"
}
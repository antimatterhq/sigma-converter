{
  "metadata": {
    "name": "PowerShell Get-Clipboard Cmdlet Via CLI",
    "comment": "Detects usage of the 'Get-Clipboard' cmdlet via CLI",
    "annotations": {
      "source": "sigma",
      "category": "process_creation",
      "product": "windows",
      "sigma_status": "test"
    }
  },
  "spec": {
    "schedule": {
      "atLeastEvery": "12h",
      "enabled": false
    },
    "input": {
      "batch": {
        "sql": "SELECT * FROM process_activity WHERE time BETWEEN CURRENT_TIMESTAMP() - INTERVAL 24 HOUR AND CURRENT_TIMESTAMP() AND (lower(activity_id) = lower('1') AND contains(lower(process.cmd_line), lower('get-clipboard')))"
      }
    },
    "output": {
      "summary": "Detects usage of the 'Get-Clipboard' cmdlet via CLI",
      "defaultContext": true
    },
    "metadata": {
      "version": 1.0,
      "severity": "Medium",
      "fidelity": "Investigative",
      "objective": "False positive: Unknown References: https://github.com/OTRF/detection-hackathon-apt29/issues/16, https://github.com/OTRF/ThreatHunter-Playbook/blob/2d4257f630f4c9770f78d0c1df059f891ffc3fec/docs/evals/apt29/detections/3.B.2_C36B49B5-DF58-4A34-9FE9-56189B9DEFEA.md",
      "mitre": [
        {
          "taxonomy": "MITRE ATT&CK",
          "tactic": "Collection",
          "techniqueId": "T1115"
        }
      ]
    },
    "computeMode": "high"
  },
  "apiVersion": "v1",
  "kind": "Rule"
}
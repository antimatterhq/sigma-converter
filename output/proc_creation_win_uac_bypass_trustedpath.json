{
  "metadata": {
    "name": "TrustedPath UAC Bypass Pattern",
    "comment": "Detects indicators of a UAC bypass method by mocking directories",
    "annotations": {
      "source": "sigma",
      "category": "process_creation",
      "product": "windows",
      "sigma_status": "test"
    }
  },
  "spec": {
    "schedule": {
      "atLeastEvery": "12h",
      "enabled": false
    },
    "input": {
      "batch": {
        "sql": "SELECT * FROM process_activity WHERE time BETWEEN CURRENT_TIMESTAMP() - INTERVAL 24 HOUR AND CURRENT_TIMESTAMP() AND (activity_id = 1 AND contains(lower(process.name), lower('c:\\\\\\\\windows \\\\\\\\system32\\\\\\\\')))"
      }
    },
    "output": {
      "summary": "Detects indicators of a UAC bypass method by mocking directories",
      "defaultContext": true
    },

{
  "metadata": {
    "name": "Suspicious Outlook Macro Created",
    "comment": "Detects the creation of a macro file for Outlook.",
    "annotations": {
      "source": "sigma",
      "category": "file_event",
      "product": "windows",
      "sigma_status": "test"
    }
  },
  "spec": {
    "schedule": {
      "atLeastEvery": "12h",
      "enabled": false
    },
    "input": {
      "batch": {
        "sql": "SELECT * FROM file_activity WHERE time BETWEEN CURRENT_TIMESTAMP() - INTERVAL 24 HOUR AND CURRENT_TIMESTAMP() AND (activity_id = 1 AND endswith(lower(file.path), lower('\\\\\\\\microsoft\\\\\\\\outlook\\\\\\\\vbaproject.otm')) AND NOT endswith(lower(actor.process.name), lower('\\\\\\\\outlook.exe')))"
      }
    },
    "output": {
      "summary": "Detects the creation of a macro file for Outlook.",
      "defaultContext": true
    },
    "metadata": {
      "version": 1.0,
      "severity": "High",
      "fidelity": "Investigative",
      "objective": "False positive: Unlikely References: https://www.mdsec.co.uk/2020/11/a-fresh-outlook-on-mail-based-persistence/, https://speakerdeck.com/heirhabarov/hunting-for-persistence-via-microsoft-exchange-server-or-outlook?slide=53, https://www.linkedin.com/pulse/outlook-backdoor-using-vba-samir-b-/",
      "mitre": [
        {
          "taxonomy": "MITRE ATT&CK",
          "tactic": "Persistence",
          "techniqueId": "T1137"
        },
        {
          "taxonomy": "MITRE ATT&CK",
          "tactic": "Persistence",
          "techniqueId": "T1008"
        },
        {
          "taxonomy": "MITRE ATT&CK",
          "tactic": "Persistence",
          "techniqueId": "T1546"
        }
      ]
    },
    "computeMode": "high"
  },
  "apiVersion": "v1",
  "kind": "Rule"
}